<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/city_name_in_list_row_text_view"
        style="@style/TextView.VeryLargeText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="false">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/city_delete_button"
            style="@style/GeneralClickable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                style="@style/ClickableImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/gap_inside_general_button_large"
                android:layout_weight="1"
                android:src="@drawable/ic_delete"/>

            <TextView
                style="@style/ClickableTextView.LargerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap_inside_general_button_large"
                android:layout_weight="3"
                android:text="@string/button_text_remove_city"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/city_rename_button"
            style="@style/GeneralClickable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_small"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                style="@style/ClickableImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/gap_inside_general_button_large"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"/>

            <TextView
                style="@style/ClickableTextView.LargerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap_inside_general_button_large"
                android:layout_weight="3"
                android:text="@string/button_text_rename_city"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>